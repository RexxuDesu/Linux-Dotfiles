[colors]
background = #091833
background-alt = #260331
foreground = #FFF900
foreground-alt = #04FADB
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
cpu = #32a852
ram = #5b635f
time = #8a4bd6
status-1 = #6ee022
status-2 = #000000
status-3 = #ff0037

[bar/custombar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
radius = 9.0
fixed-center = true
separator = |

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 1
border-color = #7a0c86

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = "Share Tech Mono:size=11;2"
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
font-3 = "FontAwesome:size=10;0"
font-4 = "Hack Nerd Font:size=12;1"

modules-left = menu-apps music xwindow
modules-center = time
modules-right = cpu memory battery wlan temperature

tray-position = none
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.cpu}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "RAM "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.ram}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlo1
interval = 3.0

format-connected = %{T3}%{T-} <label-connected>
format-connected-foreground = ${colors.foreground-alt}
format-connected-underline = ${colors.status-1}
label-connected = "WiFi"
label-connected-foreground = ${colors.foreground}

format-disconnected = %{T3}%{T-} <label-disconnected>
format-disconnected-foreground = ${colors.foreground-alt}
format-disconnected-underline = ${colors.status-3}
label-disconnected = "WiFi"
label-disconnected-foreground = ${colors.foreground}

[module/time]
type = internal/date
interval = 1

time = %H:%M:%S
time-alt = %H:%M:%S

format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.time}

label = %time%

[module/alsa]
type = internal/alsa

format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 100
low-at = 30
label-low = %percentage%%
label-low-foreground = ${colors.status-3}
label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%
label-full-foreground = ${colors.foreground}

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.status-1}

format-discharging = <animation-discharging> <label-discharging>
format-discharging-underline = ${colors.status-3}

format-full = %{T3}%{T-} <label-full> 
format-full-foreground = ${colors.foreground-alt}
format-full-underline = ${colors.status-1}

ramp-capacity-0 = %{T3}%{T-}
ramp-capacity-1 = %{T3}%{T-}
ramp-capacity-2 = %{T3}%{T-}
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = %{T3}%{T-}
animation-charging-1 = %{T3}%{T-}
animation-charging-2 = %{T3}%{T-}
animation-charging-3 = %{T3}%{T-}
animation-charging-4 = %{T3}%{T-}
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

animation-discharging-0 = %{T3}%{T-}
animation-discharging-1 = %{T3}%{T-}
animation-discharging-2 = %{T3}%{T-}
animation-discharging-3 = %{T3}%{T-}
animation-discharging-4 = %{T3}%{T-}
animation-discharging-foreground = ${colors.foreground-alt}
animation-discharging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 80
format-prefix-foreground = ${colors.foreground-alt}
format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = %{T3}%{T-}
ramp-1 = %{T3}%{T-}
ramp-2 = %{T3}%{T-}
ramp-foreground = ${colors.foreground-alt}

[module/menu-apps]
type = custom/menu
expand-right = true

format-underline = ${colors.foreground-alt}

menu-0-0 = Logout
menu-0-0-exec = bash -c 'zenity --question --text="Are you sure you want to logout?" && gnome-session-quit --logout'

menu-0-1 = Restart
menu-0-1-exec = bash -c 'zenity --question --text="Are you sure you want to restart?" && reboot'

menu-0-2 = Shutdown
menu-0-2-exec = bash -c 'zenity --question --text="Are you sure you want to shutdown?" && shutdown now'

label-open = Menu
label-open-foreground = ${colors.foreground-alt}
label-close = %{T3} %{T-}
label-close-foreground = ${colors.foreground-alt}
label-separator = |

[module/music]
type = custom/script
exec = ~/.config/polybar/nowplaying.sh
interval = 1
format-prefix = "♫ Playing: "
format-prefix-foreground = ${colors.foreground-alt}
label = %output%

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5
